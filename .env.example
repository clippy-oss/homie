# .env.example
# Copy this file to .env and fill in your values.
# .env is git-ignored and will not be committed.

# ===========================================
# Cloudflare R2 Storage
# ===========================================
# Get these from Cloudflare Dashboard -> R2 -> Manage R2 API Tokens
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_S3_API=https://your_account_id.r2.cloudflarestorage.com

# Public URL for your R2 bucket (used in download links)
R2_PUBLIC_URL=https://your-bucket-id.r2.dev

# ===========================================
# AWS credentials for R2 S3-compatible API
# ===========================================
# Create these in Cloudflare Dashboard -> R2 -> Manage R2 API Tokens
AWS_ACCESS_KEY_ID=your_r2_access_key_id
AWS_SECRET_ACCESS_KEY=your_r2_secret_access_key

# ===========================================
# Apple Code Signing (for release builds)
# ===========================================
# Base64-encoded .p12 certificate file
APPLE_CERTIFICATE_BASE64=base64_encoded_certificate

# Password for the .p12 certificate
APPLE_CERTIFICATE_PASSWORD=your_certificate_password

# Full signing identity string
SIGN_IDENTITY="Developer ID Application: Your Name (YOUR_TEAM_ID)"

# Apple Developer Team ID
DEVELOPMENT_TEAM=YOUR_TEAM_ID

# Notarization profile name (created via: xcrun notarytool store-credentials)
NOTARY_PROFILE=your-notary-profile

# ===========================================
# Supabase
# ===========================================
# Get these from Supabase Dashboard -> Settings -> API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_ACCESS_TOKEN=your_access_token
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
